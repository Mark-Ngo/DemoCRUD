@{
    ViewBag.Title = "Update";
}

@model DemoCRUD.Models.Product

<form method="post" action="/product/UpdateProduct">
    
    
    <input name="Id" value="@Model.Id" type="hidden"/>
    <div class="form-group">
        <label for="exampleInputEmail1">Product name</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="Enter name product">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Amount</label>
        <input type="number" class="form-control" name="Amount" value="@Model.Amount" placeholder="enter Amount">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Price</label>
        <input type="number" class="form-control" name="Price" value="@Model.Price" placeholder="Enter price">
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>